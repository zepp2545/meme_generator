<div class="main_wrapper confirm_wrapper text-center">


  <%= image_tag @post.image, width: '500' %>

  <div class="link_group">
     <%= button_to 'download', download_path(@post), method: :get, class: 'submit_button' %>
     <%= link_to new_post_path, class: "back_link"  do %>
      <button class="ui left labeled icon button">
          <i class="left arrow icon"></i>
          Back
      </button>
     <% end %>
  </div>
  
</div>

